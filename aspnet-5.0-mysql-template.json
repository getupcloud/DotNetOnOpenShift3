{
  "labels": { "template": "aspnetcore-mysql-ex" },
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "name": "aspnetcore-mysql-ex",
    "namespace": "openshift",
    "selfLink": "/oapi/v1/namespaces/openshift/templates/aspnetcore-mysql-ex",
    "uid": "0016dc07-9728-11e5-be98-00155d00682g",
    "resourceVersion": "245",
    "creationTimestamp": "2016-01-16T12:02:56Z",
    "annotations": {
      "description": "An example ASP.NET Core 1.0 application with mysql database",
      "iconClass": "icon-aspnet",
      "tags": "instant-app,aspnet,aspnetcore1.0,aspnet5.0,mysql"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "aspnetcore-mysql-ex",
        "annotations": { "description": "Exposes and load balances the application pods" }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 5000,
            "targetPort": 5000
          }
        ],
        "selector": { "name": "aspnetcore-mysql-ex" }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": { "name": "aspnetcore-mysql-ex" },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "to": {
          "kind": "Service",
          "name": "aspnetcore-mysql-ex"
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "aspnetcore-mysql-ex",
        "annotations": { "description": "Keeps track of changes in the application image" }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "aspnetcore-mysql-ex",
        "annotations": { "description": "Defines how to build the application" }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "openshift",
              "name": "aspnetcore:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "aspnetcore-mysql-ex:latest"
          }
        },
        "triggers": [
          { "type": "ImageChange" },
          {
            "type": "GitHub",
            "github": { "secret": "${GITHUB_WEBHOOK_SECRET}" }
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "aspnetcore-mysql-ex",
        "annotations": { "description": "Defines how to deploy the application server" }
      },
      "spec": {
        "strategy": { "type": "Rolling" },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [ "aspnetcore-mysql-ex" ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "aspnetcore-mysql-ex:latest"
              }
            }
          },
          { "type": "ConfigChange" }
        ],
        "replicas": 1,
        "selector": { "name": "aspnetcore-mysql-ex" },
        "template": {
          "metadata": {
            "name": "aspnetcore-mysql-ex",
            "labels": { "name": "aspnetcore-mysql-ex" }
          },
          "spec": {
            "containers": [
              {
                "name": "aspnetcore-mysql-ex",
                "image": "aspnetcore-mysql-ex",
                "ports": [ { "containerPort": 5000 } ],
                "env": [
                  {
                    "name": "ASPNET_SECRET_TOKEN",
                    "value": "${ASPNET_SECRET_TOKEN}"
                  },
                  {
                    "name": "ASPNET_SECURITY_SALT",
                    "value": "${ASPNET_SECURITY_SALT}"
                  },
                  {
                    "name": "ASPNET_SECURITY_CIPHER_SEED",
                    "value": "${ASPNET_SECURITY_CIPHER_SEED}"
                  },
                  {
                    "name": "OPCACHE_REVALIDATE_FREQ",
                    "value": "${OPCACHE_REVALIDATE_FREQ}"
                  },
                  {
                    "name": "DATABASE_SERVICE_NAME",
                    "value": "${DATABASE_SERVICE_NAME}"
                  },
                  {
                    "name": "DATABASE_ENGINE",
                    "value": "${DATABASE_ENGINE}"
                  },
                  {
                    "name": "DATABASE_NAME",
                    "value": "${DATABASE_NAME}"
                  },
                  {
                    "name": "DATABASE_USER",
                    "value": "${DATABASE_USER}"
                  },
                  {
                    "name": "DATABASE_PASSWORD",
                    "value": "${DATABASE_PASSWORD}"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DATABASE_SERVICE_NAME}",
        "annotations": { "description": "Exposes the database server" }
      },
      "spec": {
        "ports": [
          {
            "name": "mysql",
            "port": 3306,
            "targetPort": 3306
          }
        ],
        "selector": { "name": "${DATABASE_SERVICE_NAME}" }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${DATABASE_SERVICE_NAME}",
        "annotations": { "description": "Defines how to deploy the database" }
      },
      "spec": {
        "strategy": { "type": "Recreate" },
        "triggers": [ { "type": "ConfigChange" } ],
        "replicas": 1,
        "selector": { "name": "${DATABASE_SERVICE_NAME}" },
        "template": {
          "metadata": {
            "name": "${DATABASE_SERVICE_NAME}",
            "labels": { "name": "${DATABASE_SERVICE_NAME}" }
          },
          "spec": {
            "containers": [
              {
                "name": "mysql",
                "image": "${MYSQL_IMAGE}",
                "ports": [ { "containerPort": 3306 } ],
                "env": [
                  {
                    "name": "MYSQL_USER",
                    "value": "${DATABASE_USER}"
                  },
                  {
                    "name": "MYSQL_PASSWORD",
                    "value": "${DATABASE_PASSWORD}"
                  },
                  {
                    "name": "MYSQL_DATABASE",
                    "value": "${DATABASE_NAME}"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the repository with your application source code",
